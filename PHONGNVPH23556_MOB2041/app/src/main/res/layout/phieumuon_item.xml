<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10">

        <TextView
            android:id="@+id/tv_maPM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mã phiếu mượn" />

        <TextView
            android:id="@+id/tv_tenTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tên tv" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="tên sách"
            android:id="@+id/tvTenSach"
            android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="trả sách"
                android:id="@+id/tvTraSach"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_tienThue"
                android:text="tiền thuê"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_tvNgayPm"
                android:text="ngày"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_delete_forever_24"
        android:layout_weight="1"
        android:id="@+id/img_deletePM"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>


</LinearLayout>